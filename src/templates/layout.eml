let html ~title ~description ~body =
  <!DOCTYPE html>
  <html lang="en">
    <head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <meta name="description" content="<%s description %>">
      <link rel="stylesheet" href="/main.css" />
      <title><%s title %></title>
    </head>
    <body>
      <%s! body %>
    </body>
  </html>